<h1>Students</h1>
<br>
<%= link_to 'New Student', new_student_path, :class => "btn-primary btn-sm" %>
<br><br>
<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Panel heading</div>

  <div class="panel-body">
    <%= form_tag(students_path, method: "get") %>
    <%= label_tag(:searchterm, "Find by last name:") %>
    <%= text_field_tag(:searchterm) %>
    <%= submit_tag("Search") %>
  </div>
  
<table class="table">
  <thead>
    <tr>
      <th>Last name</th>
      <th>First name</th>
      <th>Enrollment date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.last_name %></td>
        <td><%= student.first_name %></td>
        <td><%= student.enrollment_date %></td>
        <td><%= link_to 'Show', student, :class => "label label-primary" %></td>
        <td><%= link_to 'Edit', edit_student_path(student), :class => "label label-primary" %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, :class => "label label-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  
</div>
